
<div class="container"><div class="doctor-nav"><span class="title">找医生</span></div></div>
<div><input type="search" placeholder="疾病 医生 科室 医院"></div>
<!-- 按照疾病和医院查找 -->
<div class="category">
    <div class="disease">
        <img src="<%=require('../../images/icon/胶囊.png')%>" alt="">
        <p class="title">按疾病找</p>
        <p class="desc"></p>
    </div>
    <div class="hospital">
        <img src="<%=require('../../images/icon/救护车.png')%>" alt="">
        <p class="title">按医院找</p>
        <p class="desc"></p>
    </div>
</div>
<!-- 按科室分类-->
<% for(var i = 0;i<faculty.length;i++){%>
<div class="department">
    <div class="nav">
        <img src=<%=icons[i]%> alt="">
        <span class="title"><%=faculty[i].name%></span>
        <span class="desc">(<%=faculty[i].doctorCount%>位医生)</span>
    </div>
    <div class="depart-category">
        <% for(var j = 0; j<faculty[i].secondList.length;j++){%>
            <div class="depart" data-section='<%=i%>' data-row='<%=j%>' ><%=faculty[i].secondList[j].name%></div>
        <%}%>
        <div>更多></div>
    </div>
</div>
<% } %>

